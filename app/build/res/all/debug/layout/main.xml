<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/snow"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <!-- android:background="#404040" -->

            <RadioButton
                android:id="@+id/radio_button0"
                style="@style/main_tab_bottom"
                android:layout_marginTop="-1.0dp"
                android:checked="true"
                android:drawableTop="@drawable/icon_1_selector"
                android:tag="radio_button0"
                android:text="@string/home_tab" >
            </RadioButton>

            <RadioButton
                android:id="@+id/radio_button1"
                style="@style/main_tab_bottom"
                android:layout_marginTop="-1.0dp"
                android:drawableTop="@drawable/icon_message_selector"
                android:tag="radio_button1"
                android:text="@string/message_tab" />

            <RadioButton
                android:id="@+id/radio_button2"
                style="@style/main_tab_bottom"
                android:layout_marginTop="-1.0dp"
                android:drawableTop="@drawable/icon_3_selector"
                android:tag="radio_button2"
                android:text="@string/friends_tab" />

            <RadioButton
                android:id="@+id/radio_button3"
                style="@style/main_tab_bottom"
                android:layout_marginTop="-1.0dp"
                android:drawableTop="@drawable/icon_discovery_selector"
                android:tag="radio_button3"
                android:text="@string/discovery_tab" />

            <RadioButton
                android:id="@+id/radio_button4"
                style="@style/main_tab_bottom"
                android:layout_marginTop="-1.0dp"
                android:drawableTop="@drawable/icon_5_selector"
                android:tag="radio_button4"
                android:text="@string/setting_tab" />
        </RadioGroup>
    </LinearLayout>

</TabHost><!-- From: file:/home/hjmao/workspace/specialfriend/app/src/main/res/layout/main.xml -->